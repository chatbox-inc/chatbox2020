{
  "name": "chatbox2020",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "export": "nuxt export",
    "generate": "nuxt generate",
    "doc": "run-p doc:*",
    "doc:top": "json-refs resolve -w documents/data/top.yml > static/api/top.json",
    "serve": "nuxt serve",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "lint": "run-p lint:*",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lintfix": "run-p lintfix:*",
    "lintfix:js": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxt/components": "^1.0.7",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/tailwindcss": "^2.0.0",
    "eslint-plugin-tailwind": "^0.2.0",
    "firebase": "^7.15.5",
    "json-refs": "^3.0.15",
    "marked": "^1.1.1",
    "npm-run-all": "^4.1.5",
    "nuxt": "^2.13.0",
    "vuelidate": "^0.7.5"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^3.0.0",
    "@nuxtjs/eslint-module": "^2.0.0",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-nuxt": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "sass-loader": "^9.0.0",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0"
  }
}
